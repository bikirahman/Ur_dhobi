<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pickup"
    android:orientation="vertical"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:elevation="0dp"
        android:id="@+id/appbar1">
        <ImageView
            android:id="@+id/appbarimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/logo"/>
    </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        android:layout_below="@id/appbar1"
        app:tabMode="fixed"
        android:id="@+id/tablay1"
        app:tabTextColor="#000000"
        app:tabIndicatorColor="#F0171E"
        android:background="#ffffff"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_below="@id/tablay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewpager1">
    </androidx.viewpager.widget.ViewPager>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#047bd5"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:id="@+id/pickcon"
        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
        />


</RelativeLayout>