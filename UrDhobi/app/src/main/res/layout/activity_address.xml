<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".address"
    android:background="#ffffff"
    >
    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="70dp"
        android:background="#0E32E8"
        />
    <ImageView
        android:id="@+id/address"
        android:layout_width="50dp"
        android:src="@drawable/ic_flag_black_24dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="140dp"
        android:layout_height="50dp"
        android:background="@drawable/circledark"/>

    <ImageView
        android:id="@+id/schedule"
        android:layout_width="50dp"
        android:src="@drawable/ic_access_time_black_24dp"
        android:layout_alignLeft="@id/address"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="140dp"
        android:layout_height="50dp"
        android:background="@drawable/circle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#76757A"
        android:layout_below="@id/schedule"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/addrs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add address :- "
        android:textColor="#EF6C20"
        android:layout_marginTop="130dp"
        android:layout_marginStart="15dp"/>
    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Address..."
        android:padding="9dp"
        android:layout_marginTop="30dp"
        android:textColorHint="#575C61"
        android:background="@drawable/square"
        android:inputType="textMultiLine"
        android:layout_below="@id/addrs"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:layout_marginStart="135dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:layout_marginStart="275dp"
        />
    <Button
        android:id="@+id/buttnext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select timeslot"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
        android:background="#178EF6"/>


</RelativeLayout>